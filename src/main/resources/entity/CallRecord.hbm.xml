<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.CallRecord" table="call_record" schema="homework_2">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property name="beginTime" column="beginTime"/>
        <property name="minutes" column="minutes"/>
        <property name="callerPhone" column="caller_phone"/>
        <property name="calleePhone" column="callee_phone"/>
    </class>
</hibernate-mapping>