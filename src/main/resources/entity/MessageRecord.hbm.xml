<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.MessageRecord" table="message_record" schema="homework_2">
        <id name="rid" column="rid"><generator class="increment"/></id>
        <property name="sendTime" column="send_time"/>
        <property name="number" column="number"/>
        <property name="freeNum" column="free_num"/>
        <property name="paidNum" column="paid_num"/>
        <property name="expense" column="expense"/>
        <property name="senderPhone" column="sender_phone"/>
        <property name="receiverPhone" column="receiver_phone"/>
    </class>
</hibernate-mapping>