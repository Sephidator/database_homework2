<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Plan" table="plan" schema="homework_2">
        <id name="pid" column="pid"><generator class="increment"/></id>
        <property name="pname" column="pname"/>
        <property name="price" column="price"/>
        <property name="freeCall" column="freeCall"/>
        <property name="freeMessage" column="freeMessage"/>
        <property name="freeLocalData" column="freeLocalData"/>
        <property name="freeDomesticData" column="freeDomesticData"/>
        <!--配置单向一对多关系-->
        <set name="orderList" table="order">
            <!--指定关联的外键列-->
            <key column="pid"/>
            <one-to-many class="entity.Orders"/>
        </set>
    </class>
</hibernate-mapping>