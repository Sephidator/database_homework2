<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.PlanRecord" table="plan_record" schema="homework_2">
        <id name="rid" column="rid"><generator class="increment"/></id>
        <property name="time" column="time"/>
        <property name="expense" column="expense"/>
        <property name="refund" column="refund"/>
        <property name="userPhone" column="user_phone"/>
        <property name="pid" column="pid"/>
    </class>
</hibernate-mapping>