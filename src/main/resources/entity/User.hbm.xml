<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.User" table="user" schema="homework_2">
        <id name="phone" column="phone"/>
        <property name="uname" column="uname"/>
        <property name="balance" column="balance"/>
        <property name="province" column="province"/>
        <property name="freeCallMinutes" column="freeCallMinutes"/>
        <property name="freeMessageNum" column="freeMessageNum"/>
        <property name="freeLocalData" column="freeLocalData"/>
        <property name="freeDomesticData" column="freeDomesticData"/>
    </class>
</hibernate-mapping>